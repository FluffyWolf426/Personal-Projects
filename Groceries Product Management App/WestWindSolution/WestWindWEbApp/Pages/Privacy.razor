@code {
    //inject the services this component will be using
    //use property injection
    //use the annotation attribute [Inject]
    [Inject]
    public BuildVersionServices _buildVersionServices{ get; set; }

    //the query will return an instance of BuildVersion to my component
    private BuildVersion buildVersion{ get; set; }

    protected override void OnInitialized()
    {
        //consume a service located in the Services BuildVersionServices
        buildVersion = _buildVersionServices.BuildVersion_GetVersion();
        base.OnInitialized();
    }
